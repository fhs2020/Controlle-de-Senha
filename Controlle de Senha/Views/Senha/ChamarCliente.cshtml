@model Controlle_de_Senha.Models.Password

@{
    ViewBag.Title = "Create";
}

<h2>Selecione tipo de senha</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    if (ViewBag.Message == null)
    {
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Tipo, "Tipo Senha", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                @Html.DropDownListFor(m => m.Tipo, ViewBag.ListOfTipos as SelectList)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Imprimir Senha" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    else
    {
        <p>@ViewBag.Message</p>

        <a href="@Url.Action("ChamarCliente", "Senha")" class="elements">
            <span>Pedir outra senha?</span>
        </a>
    }
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
